<Window x:Class="InfertilityTreatment.Admin.AdminManageHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityTreatment.Admin"
        mc:Ignorable="d"
        Title="Admin Manager Home" Height="450" Width="800" Background="#FFFAFAFA" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Admin Manager" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,20"/>

        <!-- Use Margin instead of Spacing for WPF -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Button Name="btAcccountManager" Content="Account Manager" Width="150" Height="50" Click="btAcccountManager_Click"
                    Background="#FF007ACC" Foreground="White" FontSize="14" FontWeight="SemiBold" 
                    BorderThickness="0" Padding="10" Margin="20,0"/>

            <Button Name="btDashboard" Content="Dashboard" Width="150" Height="50"
                    Background="#FF28A745" Foreground="White" FontSize="14" FontWeight="SemiBold" 
                    BorderThickness="0" Padding="10" Margin="20,0" Click="btDashboard_Click"/>
        </StackPanel>
        <Button Content="Logout" Background="OrangeRed"  Foreground="White" FontSize="14" FontWeight="SemiBold" 
                HorizontalAlignment="Left" Height="45" Margin="606,241,0,0" Grid.Row="1" VerticalAlignment="Top" Width="149" Click="Button_Click_logout"/>
    </Grid>
</Window>
