<Window x:Class="InfertilityTreatment.Admin.UserAccessHistoryDashPort"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="📊 User Registration Dashboard"
        Height="550" Width="900"
        Background="#F4F6F8"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <!-- Định nghĩa 2 hàng -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Hàng 1: Tiêu đề + tóm tắt -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,20" VerticalAlignment="Center">
            <TextBlock Text="📈 Monthly User Registrations"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Hàng 2: Biểu đồ -->
        <Border Grid.Row="1" CornerRadius="12" Background="White" Padding="15"
                BorderBrush="#E0E0E0" BorderThickness="1" >
            <lvc:CartesianChart Name="UserChart" LegendLocation="Right">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Month" Labels="{Binding Labels}" Foreground="#34495E">
                        <lvc:Axis.Separator>
                            <lvc:Separator Stroke="#BDC3C7" StrokeThickness="1"/>
                        </lvc:Axis.Separator>
                    </lvc:Axis>
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Number of Users" Foreground="#34495E"/>
                </lvc:CartesianChart.AxisY>
                <lvc:CartesianChart.DataTooltip>
                    <lvc:DefaultTooltip Background="#2C3E50" Foreground="White" />
                </lvc:CartesianChart.DataTooltip>
            </lvc:CartesianChart>
        </Border>
    </Grid>
</Window>
