<Window x:Class="InfertilityTreatment.Customer.CustomerConfirmCancelDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityTreatment.Customer"
        mc:Ignorable="d"
        Title="Confirm Cancel" Height="300" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="#F4F4F4">

    <!-- Layout container -->
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- Text message -->
            <TextBlock Text="Please enter the reason for cancellation:" 
                       FontSize="16" FontWeight="SemiBold" Foreground="#2E6BA0" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- TextBox to input cancel reason -->
            <TextBox Name="CancelReasonTextBox" 
                     VerticalScrollBarVisibility="Auto" Height="80" 
                     Margin="20,10" Padding="10"
                     BorderBrush="#4A90E2" BorderThickness="1" 
                     FontSize="14" FontWeight="Medium"/>

            <!-- Button to confirm cancellation -->
            <Button Content="Confirm" 
                    Click="ConfirmCancelAppointment_Click" 
                    HorizontalAlignment="Center" 
                    Background="#4A90E2" Foreground="White" 
                    Height="40" Width="150" 
                    BorderBrush="#4A90E2" BorderThickness="1" 
                    FontWeight="Bold" Margin="0,10"/>

            <!-- Button to cancel the cancel action -->
            <Button Content="Cancel" 
                    Click="CancelCancelAction_Click" 
                    HorizontalAlignment="Center" 
                    Background="#D32F2F" Foreground="White" 
                    Height="40" Width="150" 
                    BorderBrush="#D32F2F" BorderThickness="1" 
                    FontWeight="Bold" Margin="0,10"/>
        </StackPanel>
    </Grid>
</Window>
