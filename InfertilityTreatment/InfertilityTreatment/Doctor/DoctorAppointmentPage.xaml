<Window x:Class="InfertilityTreatment.Doctor.DoctorAppointmentPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Doctor Appointment Management" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Background -->
        <Grid.Background>
            <ImageBrush ImageSource="D:\PRN212\Image\AppointmentCheckingPage.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Margin="0,0,0,21" LastChildFill="False" Background="White" RenderTransformOrigin="0.5,0.5">
                <DockPanel.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="4.158"/>
                        <RotateTransform/>
                        <TranslateTransform X="1.427"/>
                    </TransformGroup>
                </DockPanel.RenderTransform>
                <TextBlock Text="👨‍⚕️ My Appointments"
                           FontSize="22"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="#2E6BA0"
                           Margin="5"
                           DockPanel.Dock="Left" />

                <Button Content="⬅ Back to Home"
                        Width="140" Height="35"
                        Background="#4A90E2" Foreground="White"
                        FontWeight="Bold"
                        Click="BackToHome_Click"
                        Margin="0,0,5,0"
                        DockPanel.Dock="Right"/>
            </DockPanel>

            <!-- Appointments Columns -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Pending Column -->
                <TextBlock Text="⏳ Pending" FontSize="30" FontWeight="Bold" Foreground="Black" Margin="10"/>

                <StackPanel x:Name="PendingPanel" Grid.Column="0" Margin="0,54,10,0" Background="White" Height="Auto">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ListView x:Name="PendingListView" Margin="5">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F9F9F9" CornerRadius="5" Margin="5" Padding="5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding CustomerName}" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Text="{Binding Date}" Foreground="Gray"/>
                                            <TextBlock Text="{Binding ServiceName}" Foreground="Gray"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <Button Content="Accept" Width="80" Margin="0,0,5,0" Click="Accept_Click"/>
                                                <Button Content="Reject" Width="80" Click="Reject_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>

                <!-- Accepted Column -->
                <TextBlock Text="✅ Accepted" FontSize="30" FontWeight="Bold" Foreground="Black" Margin="9,7,12,13" Grid.Column="1"/>

                <StackPanel x:Name="AcceptedPanel" Grid.Column="1" Margin="5,51,5,0" Background="White" Height="Auto">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ListView x:Name="AcceptedListView" Margin="5">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E0F7E0" CornerRadius="5" Margin="5" Padding="5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding CustomerName}" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Text="{Binding Date}" Foreground="Gray"/>
                                            <TextBlock Text="{Binding ServiceName}" Foreground="Gray"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>

                <!-- Rejected Column -->
                <TextBlock Text="❌ Rejected" FontSize="30" FontWeight="Bold" Foreground="Black" Margin="12,7,8,13" Grid.Column="2"/>

                <StackPanel x:Name="RejectedPanel" Grid.Column="2" Margin="10,53,0,0" Background="White" Height="Auto">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                        <ListView x:Name="RejectedListView" Margin="5">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#FDE0E0" CornerRadius="5" Margin="5" Padding="5">
                                        <StackPanel>
                                            <TextBlock Text="{Binding CustomerName}" FontWeight="Bold" Foreground="Black"/>
                                            <TextBlock Text="{Binding Date}" Foreground="Gray"/>
                                            <TextBlock Text="{Binding ServiceName}" Foreground="Gray"/>
                                            <TextBlock Text="Reject Reason:" FontWeight="Bold" Margin="5" Foreground="Black"/>
                                            <TextBlock Text="{Binding RejectReason}" Foreground="Gray"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>

            </Grid>

            <!-- Doctor Schedule Section -->
            <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10" Margin="0,10,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="3" Opacity="0.3" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="📅 My Schedule" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10" />
                    <ListView x:Name="DoctorScheduleList" Height="150">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="150"/>
                                <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}" Width="100"/>
                                <GridViewColumn Header="Customer" DisplayMemberBinding="{Binding CustomerName}" Width="200"/>
                                <GridViewColumn Header="Service" DisplayMemberBinding="{Binding ServiceName}" Width="200"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
