<Window x:Class="InfertilityTreatment.Doctor.DoctorChartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityTreatment.Doctor"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="DoctorChartPage" Height="500" Width="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Customer Selection -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Select Customer:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
            <ComboBox x:Name="ChartCustomerComboBox"
              Width="200"
              DisplayMemberPath="FullName"
              SelectedValuePath="UserId"
              SelectionChanged="ChartCustomerComboBox_SelectionChanged"/>
        </StackPanel>

        <!-- Chart -->
        <lvc:CartesianChart x:Name="ChartControl"
                    Grid.Row="1"
                    LegendLocation="Right">
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Month" />
            </lvc:CartesianChart.AxisX>
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Test Results" />
            </lvc:CartesianChart.AxisY>
        </lvc:CartesianChart>
    </Grid>
</Window>