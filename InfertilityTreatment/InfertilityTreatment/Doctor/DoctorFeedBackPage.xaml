<Window x:Class="InfertilityTreatment.Doctor.DoctorFeedBackPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityTreatment.Doctor"
        mc:Ignorable="d"
        Title="DoctorFeedBackPage" Height="450" Width="800">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Send Feedback to Manager"
               FontSize="24"
               FontWeight="Bold"
               Foreground="#2E6BA0"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <!-- Comment Input -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Your Comment:" FontWeight="SemiBold"/>
            <TextBox x:Name="CommentTextBox"
                 Height="150"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"/>
        </StackPanel>

        <!-- Submit Button -->
        <Button Grid.Row="2"
            Content="Submit Feedback"
            Width="150"
            Height="40"
            HorizontalAlignment="Center"
            Background="#2E6BA0"
            Foreground="White"
            Click="SubmitFeedback_Click"/>
    </Grid>

</Window>
