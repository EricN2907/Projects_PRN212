<Window x:Class="InfertilityTreatment.Doctor.DoctorHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityTreatment.Doctor"
        mc:Ignorable="d"
        Title="DoctorHomePage" 
       Height="988" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#F4FAFF">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="👶 Fertility Hope Center"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#3A6EA5"
                       DockPanel.Dock="Left"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,10,0">
                <!-- Avatar (Profile Navigation) -->
                <Button Width="40" Height="40" Margin="5"
        Click="btProfile_Click"
        ToolTip="Profile"
        BorderThickness="0"
        Background="Transparent"
        Cursor="Hand">
                    <Ellipse Width="40" Height="40">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="D:\PRN212\Image\AvatarUser.png" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </Button>
                <!-- Settings Menu -->
                <Menu VerticalAlignment="Center">
                    <MenuItem Header="⚙" FontSize="20" Padding="10,2" Click="MenuItem_Click">
                        <MenuItem Header="Contact Us" Click="ContactUs_Click"/>
                        <MenuItem Header="Logout" Click="Logout_Click"/>
                    </MenuItem>
                </Menu>
            </StackPanel>
        </DockPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="0,0,0,20">

                <Border CornerRadius="12" Padding="20" Margin="0,0,0,20">
                    <Border.Background>
                        <ImageBrush ImageSource="D:\PRN212\Image\ServiceBackground.png" Stretch="UniformToFill"/>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="10">
                            <TextBlock Text="Hope Begins Here" FontSize="30" FontWeight="Bold" Foreground="#2E6BA0"/>
                            <TextBlock Text="Compassionate care to help you start your family."
                       FontSize="18" Margin="0,10,0,20" TextWrapping="Wrap"/>
                            <Button Content="MedicalRecord Managerment"
                            Width="180" Height="45"
                            Background="#2E6BA0"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Click="btMedicalRecordManagerment_Click"/>
                            <Button Content="Send feed back to Manager"
                            Width="180" Height="45"
                            Background="LightPink"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Click="btSendFeedBackToManager_Click"/>
                            <Button Content="Check Appointments"
                            Width="180" Height="45"
                            Background="#2E6BA0"
                            Foreground="White"
                            FontWeight="SemiBold"
                            Click="btCheckAppointments_Click"/>     
                        </StackPanel>
                        <Border Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" CornerRadius="8">
                            <Image Source="D:\PRN212\Image\InfertilityTreatment.png"
                   Stretch="Uniform"
                   MaxHeight="300" Width="608"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Doctor Schedule Overview -->
                <!-- Doctor Schedule Overview -->
                <Border CornerRadius="12" Padding="20" Margin="0,0,0,20">
                    <Border.Background>
                        <ImageBrush ImageSource="D:\PRN212\Image\Background.png" Stretch="UniformToFill"/>
                    </Border.Background>


                    <Border Background="#CCFFFFFF" Padding="10" CornerRadius="12">

                        <StackPanel>
                            <TextBlock Text="📅 Doctor Schedule Overview" FontSize="22" FontWeight="Bold" Foreground="#2E6BA0" Margin="0,0,0,10"/>

                            <!-- Filter Controls -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Select Month:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox x:Name="MonthComboBox" Width="150" SelectionChanged="MonthComboBox_SelectionChanged"/>

                                <TextBlock Text="Select Year:" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,10,0"/>
                                <ComboBox x:Name="YearComboBox" Width="150" SelectionChanged="YearComboBox_SelectionChanged"/>
                            </StackPanel>

                            <!-- Weekly Tabs -->
                            <TabControl>
                                <TabItem Header="Week 1">
                                    <ListView x:Name="Week1ListView" SelectionChanged="ScheduleDay_Selected">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Day" Width="100" DisplayMemberBinding="{Binding DayName}" />
                                                <GridViewColumn Header="Customer Name" Width="100" DisplayMemberBinding="{Binding CustomerName}" />
                                                <GridViewColumn Header="Service Name" Width="100" DisplayMemberBinding="{Binding ServiceName}" />
                                                <GridViewColumn Header="Start Time" Width="100" DisplayMemberBinding="{Binding StartTime}" />
                                                <GridViewColumn Header="End Time" Width="100" DisplayMemberBinding="{Binding EndTime}" />
                                                <GridViewColumn Header="Notes" Width="300" DisplayMemberBinding="{Binding Notes}" />
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </TabItem>
                                <TabItem Header="Week 2">
                                    <ListView x:Name="Week2ListView" SelectionChanged="ScheduleDay_Selected">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Day" Width="100" DisplayMemberBinding="{Binding DayName}" />
                                                <GridViewColumn Header="Customer Name" Width="100" DisplayMemberBinding="{Binding CustomerName}" />
                                                <GridViewColumn Header="Service Name" Width="100" DisplayMemberBinding="{Binding ServiceName}" />
                                                <GridViewColumn Header="Start Time" Width="100" DisplayMemberBinding="{Binding StartTime}" />
                                                <GridViewColumn Header="End Time" Width="100" DisplayMemberBinding="{Binding EndTime}" />
                                                <GridViewColumn Header="Notes" Width="300" DisplayMemberBinding="{Binding Notes}" />
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </TabItem>
                                <TabItem Header="Week 3">
                                    <ListView x:Name="Week3ListView" SelectionChanged="ScheduleDay_Selected">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Day" Width="100" DisplayMemberBinding="{Binding DayName}" />
                                                <GridViewColumn Header="Customer Name" Width="100" DisplayMemberBinding="{Binding CustomerName}" />
                                                <GridViewColumn Header="Service Name" Width="100" DisplayMemberBinding="{Binding ServiceName}" />
                                                <GridViewColumn Header="Start Time" Width="100" DisplayMemberBinding="{Binding StartTime}" />
                                                <GridViewColumn Header="End Time" Width="100" DisplayMemberBinding="{Binding EndTime}" />
                                                <GridViewColumn Header="Notes" Width="300" DisplayMemberBinding="{Binding Notes}" />
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </TabItem>
                                <TabItem Header="Week 4">
                                    <ListView x:Name="Week4ListView" SelectionChanged="ScheduleDay_Selected">
                                        <ListView.View>
                                            <GridView>
                                                <GridViewColumn Header="Day" Width="100" DisplayMemberBinding="{Binding DayName}" />
                                                <GridViewColumn Header="Customer Name" Width="100" DisplayMemberBinding="{Binding CustomerName}" />
                                                <GridViewColumn Header="Service Name" Width="100" DisplayMemberBinding="{Binding ServiceName}" />
                                                <GridViewColumn Header="Start Time" Width="100" DisplayMemberBinding="{Binding StartTime}" />
                                                <GridViewColumn Header="End Time" Width="100" DisplayMemberBinding="{Binding EndTime}" />
                                                <GridViewColumn Header="Notes" Width="300" DisplayMemberBinding="{Binding Notes}" />
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </TabItem>
                            </TabControl>
                        </StackPanel>
                    </Border>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <TextBlock Grid.Row="2"
                   Text="© 2025 Fertility Hope Center. All rights reserved."
                   FontSize="12"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   Margin="0,20,0,0"/>
    </Grid>
</Window>
