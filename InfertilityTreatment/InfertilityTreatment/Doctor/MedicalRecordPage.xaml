<Window x:Class="InfertilityTreatment.Doctor.MedicalRecordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Medical Record Entry"
        Height="762" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F9FAFB">
    <Grid Margin="20">
        <Border Background="White" Padding="20" CornerRadius="10" BorderBrush="#D1D5DB" BorderThickness="1" >
            <StackPanel>
                <TextBlock Text="🩺 Create Medical Record"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0,0,0,20"/>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Test Results:" FontWeight="SemiBold"/>
                    <TextBox x:Name="TestResultsTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Prescription:" FontWeight="SemiBold"/>
                    <TextBox x:Name="PrescriptionTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Doctor's Note:" FontWeight="SemiBold"/>
                    <TextBox x:Name="NoteTextBox" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Select Customer:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                    <ComboBox x:Name="CustomerComboBox" Width="200"
              DisplayMemberPath="FullName"
              SelectedValuePath="UserId"
              SelectionChanged="CustomerComboBox_SelectionChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Select Appointment:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                    <ComboBox x:Name="AppointmentComboBox"
              Width="200"
              DisplayMemberPath="AppointmentDate"
              SelectedValuePath="AppointmentId"/>
                </StackPanel>

                <Button Content="Save Medical Record"
                        Width="200"
                        Height="40"
                        Background="#2E86DE"
                        Foreground="White"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Click="SaveMedicalRecord_Click"/>
                <Button Content="Watch the Customer  Chart"
                        Width="200"
                        Height="40"
                        Background="Pink"
                        Foreground="White"
                        FontWeight="Bold"
                        HorizontalAlignment="Center"
                        Click="WatchCustomerChart_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
