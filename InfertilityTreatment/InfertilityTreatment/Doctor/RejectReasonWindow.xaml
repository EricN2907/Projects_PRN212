<Window x:Class="InfertilityTreatment.Doctor.RejectReasonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reject Reason" Height="200" Width="400">
    <Grid>
        <TextBlock Text="Please enter the reason for rejection:" Margin="10" VerticalAlignment="Top"/>
        <TextBox x:Name="RejectReasonTextBox" Margin="10,40,10,10" VerticalAlignment="Top" Height="80"/>
        <Button Content="Submit" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Click="Submit_Click"/>
    </Grid>
</Window>
