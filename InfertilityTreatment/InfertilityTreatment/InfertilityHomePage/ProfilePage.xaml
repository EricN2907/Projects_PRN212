<Window x:Class="InfertilityTreatment.InfertilityHomePage.ProfilePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Profile"
        Height="450" Width="500"
        Background="#F4F6F8"
        WindowStartupLocation="CenterScreen">

    <Border Background="White" Padding="20" Margin="20" CornerRadius="10" BorderBrush="#D1D5DB" BorderThickness="1">
        <StackPanel>
            <TextBlock Text="👤 User Profile"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Username:" FontWeight="SemiBold"/>
                <TextBox x:Name="UsernameText" FontSize="14" Foreground="#34495E"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Full Name:" FontWeight="SemiBold"/>
                <TextBox x:Name="FullNameText" FontSize="14" Foreground="#34495E"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Age:" FontWeight="SemiBold"/>
                <TextBox x:Name="AgeText" FontSize="14" Foreground="#34495E"/>
            </StackPanel>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Phone Number:" FontWeight="SemiBold"/>
                <TextBox x:Name="PhoneText" FontSize="14" Foreground="#34495E"/>
            </StackPanel>

            <!-- Role-specific section -->
            <TextBlock x:Name="RoleInfoText"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#3498DB"
                       Margin="0,20,0,10"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" >
                <Button Content="Update Information" Width="150" Height="35" Background="#3498DB" Foreground="White" Click="UpdateInformation_Click"/>
                <Button Content="Update Password" Width="150" Height="35" Background="#E67E22" Foreground="White" Click="UpdatePassword_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
