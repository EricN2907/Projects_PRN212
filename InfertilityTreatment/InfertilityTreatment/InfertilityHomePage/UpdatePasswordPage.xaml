<Window x:Class="InfertilityTreatment.InfertilityHomePage.UpdatePasswordPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Password" Height="350" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F8">
    <Border Background="White" Padding="20" Margin="20" CornerRadius="10" BorderBrush="#D1D5DB" BorderThickness="1">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="🔒 Update Password"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Old Password -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Old Password:" FontWeight="SemiBold"/>
                <PasswordBox x:Name="OldPasswordBox" FontSize="14" />
            </StackPanel>

            <!-- New Password -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="New Password:" FontWeight="SemiBold"/>
                <PasswordBox x:Name="NewPasswordBox" FontSize="14" />
            </StackPanel>

            <!-- Confirm Password -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Confirm Password:" FontWeight="SemiBold"/>
                <PasswordBox x:Name="ConfirmPasswordBox" FontSize="14" />
            </StackPanel>

            <!-- Submit Button -->
            <Button Content="Update Password"
                    Width="150"
                    Height="35"
                    Background="#3498DB"
                    Foreground="White"
                    HorizontalAlignment="Center"
                    Click="UpdatePassword_Click"/>
        </StackPanel>
    </Border>
</Window>
