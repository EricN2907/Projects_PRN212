<Window x:Class="InfertilityTreatment.InfertilityHomePage.WebHomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Infertility Treatment Center"
        Height="988" Width="1280"
        Background="#F4FAFF"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="👶 Fertility Hope Center"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#3A6EA5"
                       DockPanel.Dock="Left"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Content="Contact Us"
                        Name="btContactUs"
                        Margin="5"
                        FontSize="16"
                        Padding="12,6"
                        Height="40"
                        Width="120"
                        Background="Violet"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="btContactUs_Click" />
                <Button Content="About Us"
                        Name="btAboutUs"
                        Margin="5"
                        FontSize="16"
                        Padding="12,6"
                        Height="40"
                        Width="120"
                        Background="LightSeaGreen"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="btAboutUs_Click" />
                <Button Content="Login"
                        Name="btLogin"
                        Margin="5"
                        FontSize="16"
                        Padding="12,6"
                        Height="40"
                        Width="130"
                        Background="#FF80AB"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="btLogin_Click" />
            </StackPanel>
        </DockPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="0,0,0,20">

                <Border CornerRadius="12" Padding="20" Margin="0,0,0,20">
                    <Border.Background>
                        <ImageBrush ImageSource="D:\PRN212\Image\ServiceBackground.png" Stretch="UniformToFill"/>
                    </Border.Background>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Section -->
                        <Border Grid.Column="0" Background="#AAFFFFFF" CornerRadius="8" Padding="10" Margin="10">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Hope Begins Here" FontSize="30" FontWeight="Bold" Foreground="#2E6BA0"/>
                                <TextBlock Text="Compassionate care to help you start your family."
                           FontSize="18" Margin="0,10,0,20" TextWrapping="Wrap"/>
                                <Button
                        x:Name="btAppointment"
                        Content="Book Appointment"
                        Width="180"
                        Height="45"
                        Background="#2E6BA0"
                        Foreground="White"
                        FontWeight="SemiBold"
                        Click="btBookAppointment_Click"
                        />
                            </StackPanel>
                        </Border>

                        <!-- Right Section -->
                        <Border Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Background="#AAFFFFFF" CornerRadius="8" Padding="10" Margin="10">
                            <Image Source="D:\PRN212\Image\InfertilityTreatment.png"
                   Stretch="Uniform"
                   MaxHeight="300" Width="608"/>
                        </Border>
                    </Grid>
                </Border>


                <!-- Background Section for Services & Blog -->
                <Border CornerRadius="12" Padding="20" Margin="0,0,0,20">
                    <Border.Background>
                        <ImageBrush ImageSource="D:\PRN212\Image\Background.png" Stretch="UniformToFill"/>
                    </Border.Background>

                    <Border Background="#CCFFFFFF" Padding="10" CornerRadius="12">
                        <StackPanel>

                            <!-- Services -->
                            <TextBlock Text="Our Fertility Services" FontSize="22" FontWeight="Bold" Foreground="#2E6BA0"/>
                            <WrapPanel Margin="0,10,0,20">
                                <Border Background="#F8F9FA" Width="240" Height="130" Margin="10" Padding="10"
                                        CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="IVF &amp; IUI Treatment" FontWeight="Bold"/>
                                        <TextBlock Text="Safe and modern fertility solutions." FontSize="12" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#F8F9FA" Width="240" Height="130" Margin="10" Padding="10"
                                        CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="👩‍⚕️ Fertility Consultation" FontWeight="Bold"/>
                                        <TextBlock Text="One-on-one session with our specialists." FontSize="12" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#F8F9FA" Width="240" Height="130" Margin="10" Padding="10"
                                        CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="💊 Hormonal Therapy" FontWeight="Bold"/>
                                        <TextBlock Text="Personalized hormone balance programs." FontSize="12" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                                <Border Background="#F8F9FA" Width="240" Height="130" Margin="10" Padding="10"
                                        CornerRadius="8" BorderBrush="#DDD" BorderThickness="1">
                                    <StackPanel>
                                        <TextBlock Text="🥗 Nutrition Support" FontWeight="Bold"/>
                                        <TextBlock Text="Boost fertility with diet guidance." FontSize="12" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Border>
                            </WrapPanel>

                            <!-- Blog Section -->
                            <TextBlock Text="📚 Latest from Our Blog"
                              FontSize="22"
                              FontWeight="Bold"
                              Foreground="#2E6BA0"
                              Margin="0,20,0,10"/>
                            <WrapPanel x:Name="BlogWrapPanel"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>
                        </StackPanel>
                    </Border>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <TextBlock Grid.Row="2"
                   Text="© 2025 Fertility Hope Center. All rights reserved."
                   FontSize="12"
                   HorizontalAlignment="Center"
                   Foreground="Gray"
                   Margin="0,20,0,0"/>
    </Grid>
</Window>
