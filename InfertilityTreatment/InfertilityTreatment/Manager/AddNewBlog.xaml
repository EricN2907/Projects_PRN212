<Window x:Class="InfertilityTreatment.Manager.AddNewBlog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Blog" Height="420" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F3F6FA">

    <Border CornerRadius="10" Padding="20" Margin="20"
        Background="White" BorderBrush="#D9E2EC" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Blog Title" FontSize="14" FontWeight="Bold"/>
            <TextBox x:Name="txtTitle" Grid.Row="1" Height="30" Margin="0,5,0,15" Padding="5"
              Background="#FAFAFA" BorderBrush="#C0C0C0" BorderThickness="1" />

            <!-- Content -->
            <TextBlock Grid.Row="2" Text="Content" FontSize="14" FontWeight="Bold" VerticalAlignment="Top"/>
            <TextBox x:Name="txtContent" Grid.Row="2" Margin="0,25,0,10" Height="100"
              TextWrapping="Wrap" AcceptsReturn="True" Padding="5"
              Background="#FAFAFA" BorderBrush="#C0C0C0" BorderThickness="1"/>
            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" >
                <Button Content="💾 Save" Width="100" Height="35" Margin="0,0,10,0"
                 Click="Save_Click" Background="#4682B4" Foreground="White" FontWeight="Bold"
                 BorderBrush="Transparent" Cursor="Hand"/>
                <Button Content="✖ Cancel" Width="100" Height="35"
                 Click="Cancel_Click" Background="#E0E0E0" Foreground="Black"
                 BorderBrush="Transparent" Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>

</Window>
