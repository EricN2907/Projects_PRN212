<Window x:Class="InfertilityTreatment.Manager.AddUpdateDoctorInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityTreatment.Manager"
        mc:Ignorable="d"
        Title="AddUpdateDoctorInformation" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.Background>
            <ImageBrush ImageSource="D:\PRN212\Image\ViewAppoimentPage.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Doctor Information" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Width="300">
            <TextBlock Text="User Name:"/>
            <TextBox x:Name="NameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Full Name:"/>
            <TextBox x:Name="FullNameTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Phone Number:"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,5,0,10"/>

            <TextBlock Text="Age:"/>
            <TextBox x:Name="AgeTextBox" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Save" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="100" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
