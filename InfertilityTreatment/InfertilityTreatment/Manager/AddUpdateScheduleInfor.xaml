<Window x:Class="InfertilityTreatment.Manager.AddUpdateScheduleInfor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityTreatment.Manager"
        mc:Ignorable="d"
        Title="AddUpdateScheduleInfor" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.Background>
            <ImageBrush ImageSource="D:\PRN212\Image\AppointmentCheckingPage.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel>
            <TextBlock Text="Schedule Date:"/>
            <DatePicker x:Name="DatePicker" Margin="0,5,0,10"/>

            <TextBlock Text="Note:"/>
            <TextBox x:Name="NoteTextBox" Margin="0,5,0,10"/>

                <TextBlock Text="Customer:" />
                <ComboBox x:Name="CustomerComboBox"
                 DisplayMemberPath="UserName"
                 SelectedValuePath="UserId"
                Margin="0,5,0,10"/>

                <TextBlock Text="Treatment Service" />
                    <ComboBox x:Name="ServiceComboBox"
                  DisplayMemberPath="ServiceName"
                  SelectedValuePath="ServiceId"
                  Margin="0,5,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Width="80" Margin="0,0,10,0" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="80" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
