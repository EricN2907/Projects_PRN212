<Window x:Class="InfertilityTreatment.Manager.AppointmentCheckingPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AppointmentCheckingPage" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Background image -->
        <Grid.Background>
            <ImageBrush ImageSource="D:\PRN212\Image\AppointmentCheckingPage.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Overlaying main UI on top of the image -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>

            <!-- Header with Back Button on the right -->
            <DockPanel Margin="0,0,0,10" LastChildFill="False" Background="White">
                <TextBlock Text="📋 Appointment Checking"
                           FontSize="22"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Foreground="#2E6BA0"
                           Margin="5"
                           DockPanel.Dock="Left" />

                <Button Content="⬅ Back to Menu"
                        Width="140" Height="35"
                        Background="#4A90E2" Foreground="White"
                        FontWeight="Bold"
                        Click="BackToMenu_Click"
                        Margin="0,0,5,0"
                        DockPanel.Dock="Right"/>
            </DockPanel>

            <!-- Main Content: 3 Columns -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Pending Column -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0" Background="White">
                    <TextBlock Text="⏳ Pending" FontSize="18" FontWeight="Bold" Margin="5" />
                    <ScrollViewer Height="500">
                        <WrapPanel x:Name="PendingPanel" Margin="5"/>
                    </ScrollViewer>
                </StackPanel>

                <!-- Accepted Column -->
                <StackPanel Grid.Column="1" Margin="5,0" Background="White">
                    <TextBlock Text="✅ Accepted" FontSize="18" FontWeight="Bold" Margin="5" />
                    <ScrollViewer Height="500">
                        <WrapPanel x:Name="AcceptedPanel" Margin="5"/>
                    </ScrollViewer>
                </StackPanel>

                <!-- Rejected Column -->
                <StackPanel Grid.Column="2" Margin="10,0,0,0" Background="White">
                    <TextBlock Text="❌ Rejected" FontSize="18" FontWeight="Bold" Margin="5" />
                    <ScrollViewer Height="500">
                        <WrapPanel x:Name="RejectedPanel" Margin="5"/>
                    </ScrollViewer>
                </StackPanel>
            </Grid>

            <!-- Doctor Schedule Section -->
            <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="10" Margin="0,10,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Gray" BlurRadius="10" ShadowDepth="3" Opacity="0.3" />
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="👨‍⚕️ Doctor's Schedule" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10" />
                    <ListView x:Name="DoctorScheduleList" Height="150">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="150"/>
                                <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Time}" Width="100"/>
                                <GridViewColumn Header="Customer" DisplayMemberBinding="{Binding CustomerName}" Width="200"/>
                                <GridViewColumn Header="Service" DisplayMemberBinding="{Binding ServiceName}" Width="200"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
