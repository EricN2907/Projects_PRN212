<Window x:Class="InfertilityTreatment.Manager.BlogManagerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BlogManagerPage" Height="550" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Modern Rounded Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Watermarked TextBox -->
        <Style x:Key="WatermarkedTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <TextBox x:Name="textBox"
                                     Text="{TemplateBinding Text}"
                                     Background="{TemplateBinding Background}"
                                     Foreground="{TemplateBinding Foreground}"
                                     Padding="{TemplateBinding Padding}"
                                     FontSize="{TemplateBinding FontSize}"/>
                            <TextBlock x:Name="watermark"
                                       Text="Search blog..."
                                       Foreground="Gray"
                                       FontStyle="Italic"
                                       Margin="5,0,0,0"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="watermark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Background Image -->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="D:\PRN212\Image\BlogManagerPageBackground.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid Margin="10" Background="#CCFFFFFF">

            <!-- Top Tab Bar -->
            <DockPanel LastChildFill="False" Background="#DEEAF6" Height="50" VerticalAlignment="Top" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,5,0,0">
                    <Button Content="➕ Add" Style="{StaticResource ModernButtonStyle}" Click="Add_Click"/>
                    <Button Content="✏️ Update" Style="{StaticResource ModernButtonStyle}" Click="Update_Click"/>
                    <Button Content="🗑️ Delete" Style="{StaticResource ModernButtonStyle}" Click="Delete_Click"/>

                    <!-- Search Box and Button -->
                    <Grid Width="200" Height="30" Margin="5,0">
                        <TextBox x:Name="SearchTextBox"
                        FontSize="14"
                       VerticalContentAlignment="Center"
                       Padding="5,0,0,0"
                         TextChanged="SearchTextBox_TextChanged"/>
                        <TextBlock x:Name="SearchPlaceholder"
                          Text="Search blog..."
                          Foreground="Gray"
                          Margin="8,3,0,0"
                          IsHitTestVisible="False"
                          VerticalAlignment="Center"
                          FontSize="14"
                          Visibility="Visible"/>
                    </Grid>
                    <Button Content="🔍 Search" Style="{StaticResource ModernButtonStyle}" Click="Search_Click"/>
                </StackPanel>

                <!-- Back Button -->
                <Button Content="⬅ Back to Menu" Style="{StaticResource ModernButtonStyle}" Click="BackToManager_Click" DockPanel.Dock="Right" Margin="0,5,10,0" Width="146"/>
            </DockPanel>

            <!-- Blog Header -->
            <TextBlock Text="📚 Latest from Our Blog"
                       FontSize="22" FontWeight="Bold"
                       Foreground="#2E6BA0"
                       Margin="10,60,0,10"/>

            <!-- Blog Cards -->
            <ScrollViewer Margin="0,100,0,0" VerticalScrollBarVisibility="Auto">
                <WrapPanel x:Name="BlogWrapPanel"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
