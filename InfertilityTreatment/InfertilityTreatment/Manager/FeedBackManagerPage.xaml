<Window x:Class="InfertilityTreatment.Manager.FeedBackManagerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Feedback Manager" Height="600" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="🩺 Doctor Feedback"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <DataGrid x:Name="DoctorFeedbackGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      Height="200"
                      Margin="0,0,0,30">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Doctor" Binding="{Binding DoctorName}" Width="*"/>
                    <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="2*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding CreatedDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="🧑 Customer Feedback"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <DataGrid x:Name="CustomerFeedbackGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      Height="200">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                    <DataGridTextColumn Header="Rating" Binding="{Binding Rating}" Width="100"/>
                    <DataGridTextColumn Header="Comment" Binding="{Binding Comment}" Width="2*"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding CreatedDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </ScrollViewer>
</Window>
