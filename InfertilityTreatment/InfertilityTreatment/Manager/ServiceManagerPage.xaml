<Window x:Class="InfertilityTreatment.Manager.ServiceManagerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Service Manager" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Modern Rounded Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="18">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style for Form -->
        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2E6BA0"/>
            <Setter Property="Margin" Value="0,6,0,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="D:\PRN212\Image\ServicemanagerPage.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Border Background="#CCFFFFFF" Margin="10">
            <Grid>
                <!-- Top Tab Bar -->
                <DockPanel LastChildFill="False" Background="#DEEAF6" Height="50" VerticalAlignment="Top">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10,5,0,0">
                        <Button Content="➕ Add" Style="{StaticResource ModernButtonStyle}" Click="Add_Click"/>
                        <Button Content="✏️ Update" Style="{StaticResource ModernButtonStyle}" Click="Update_Click"/>
                        <Button Content="🗑️ Delete" Style="{StaticResource ModernButtonStyle}" Click="Delete_Click"/>
                    </StackPanel>
                    <Button Content="⬅ Back to Menu" Style="{StaticResource ModernButtonStyle}" Click="BackToMenu_Click" Margin="0,5,10,0" DockPanel.Dock="Right" Width="140"/>
                </DockPanel>

                <!-- Main Layout -->
                <Grid Margin="10,60,10,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left: List of Users and Appointments -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="👥 Users" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                        <ListBox x:Name="UserListBox" Height="120" Margin="0,0,0,10"/>

                        <TextBlock Text="📅 Appointments" FontWeight="Bold" FontSize="16" Margin="0,10,0,5"/>
                        <ListBox x:Name="AppointmentListBox" Height="120"/>
                    </StackPanel>

                    <!-- Right: Service Form and Cards -->
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Form for Create/Update -->
                        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                            <TextBlock Text="Service Name:" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="ServiceNameTextBox" Height="30"/>

                            <TextBlock Text="Description:" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="DescriptionTextBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                            <TextBlock Text="Price:" Style="{StaticResource FormLabelStyle}"/>
                            <TextBox x:Name="PriceTextBox" Height="30"/>
                        </StackPanel>

                        <!-- Services List like Blog Cards -->
                        <ScrollViewer Grid.Row="1">
                            <WrapPanel x:Name="ServiceCardPanel" Margin="0,10,0,0"/>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
