<Window x:Class="InfertilityTreatment.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfertilityTreatment"
        mc:Ignorable="d"
        Title="Register"
        Height="600"
        Width="800"
        Background="#F4FAFF"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal">

    <Grid>
        <Border VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Width="480"
                Background="White"
                Padding="30"
                CornerRadius="12"
                BorderBrush="#DDD"
                BorderThickness="1">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Register"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#3A6EA5"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Text="Username:" FontSize="16" Margin="0,5,0,0"/>
                <TextBox Name="txtUserName" FontSize="16" Height="30" Margin="0,0,0,10"/>

                <!-- Password -->
                <TextBlock Text="Password:" FontSize="16"/>
                <PasswordBox Name="txtPassword" FontSize="16" Height="30" Margin="0,0,0,10"/>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm Password:" FontSize="16"/>
                <PasswordBox Name="txtConfirmPassword" FontSize="16" Height="30" Margin="0,0,0,10"/>

                <!-- Full Name -->
                <TextBlock Text="Full Name:" FontSize="16"/>
                <TextBox Name="txtFullName" FontSize="16" Height="30" Margin="0,0,0,10"/>

                <!-- Age -->
                <TextBlock Text="Age:" FontSize="16"/>
                <TextBox Name="txtAge" FontSize="16" Height="30" Margin="0,0,0,10"/>

                <!-- Phone Number -->
                <TextBlock Text="Phone Number:" FontSize="16"/>
                <TextBox Name="txtPhoneNumber" FontSize="16" Height="30" Margin="0,0,0,20"/>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Name="btRegister"
                            Content="Register"
                            Width="120"
                            Height="40"
                            Margin="5"
                            Background="#28A745"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            Click="btRegister_Click"/>

                    <Button Name="btBack"
                            Content="Back"
                            Width="120"
                            Height="40"
                            Margin="5"
                            Background="#6C757D"
                            Foreground="White"
                            FontSize="16"
                            FontWeight="Bold"
                            Click="btBack_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
